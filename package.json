{
	"name": "@lunapress/npm-packages",
	"private": true,
	"scripts": {
		"build:all": "bun --filter '*' build",
		"test:all": "bun --filter '*' test",
		"fmt:all": "bunx biome format --write",
		"lint:all": "bunx biome lint --write",
		"ci:check": "bunx biome ci .",
