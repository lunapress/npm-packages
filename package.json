	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.10.1",
		"@typescript/native-preview": "7.0.0-dev.20251117.1"
	},
	"workspaces": [
		"packages/*"
	]
}
